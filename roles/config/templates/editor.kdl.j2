layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:/home/{{ user }}/.config/zellij/plugins/statusbar.wasm"
        }
    }

    tab name="editor" focus=true {
        pane borderless=true
    }
    tab name="terminal" {
        pane
        pane size="20%"
    }
}
