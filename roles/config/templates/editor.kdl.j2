layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:/home/{{ user }}/.config/zellij/plugins/statusbar.wasm"
        }
    }

    tab name="editor" focus=true fullscreen=true {
        pane borderless=true command="nvim" {
            args "."
        }
    }
    tab name="terminal" {
        pane
        pane size="20%"
    }
}

keybinds {
    locked {
        bind "Insert" { GoToTab 2; SwitchToMode "Normal"; }
    }

    shared_except "locked" {
        bind "Insert" { GoToTab 1; SwitchToMode "Locked"; }
        bind "Alt d" { Detach; }
    }
}
